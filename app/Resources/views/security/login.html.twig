{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}REST STARTER{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/vendor/bootstrap.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
        <!-- end: Css -->
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('apple-touch-icon.png') }}">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<!-- Color red for the Errors -->
<body>
<div class="container">
    <form class="form-signin col-lg-4 center-block" action="{{  path('security_login') }}" method="post">
        <h3>Login</h3>
        {% if error %}
            <div class="alert alert-danger card-panel red white-text">
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}
        <input type="text" placeholder="username" class="form-control" required  id="username" name="_username" value="{{ last_username }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <input type="password" placeholder="Password" class="form-control" required  id="password" name="_password" />
        <span class="bar"></span>
        <br/>
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Ingresar"/>
    </form>
</div>

{% block javascripts %}
    <!-- start: Javascript -->
    <script src="{{ asset('js/vendor/jquery-2.1.1.min.js') }}"></script>
    <script src="{{ asset('js/vendor/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>